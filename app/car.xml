<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Car"
    android:background="@drawable/way"

  >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bungee"
        android:text="Avalible cars"
        android:textColor="#B5090909"

        android:textSize="30dp">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="30dp">


        <ImageButton
            android:id="@+id/Mini_btn"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="220dp"
            android:background="#fff"
            android:src="@drawable/mini">

        </ImageButton>

        <ImageButton
            android:id="@+id/Micro_btn"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="#FFFFFF"
            android:src="@drawable/minii">

        </ImageButton>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:text="Micro"
            android:textColor="@color/cardview_dark_background"
            android:textSize="28dp">

        </TextView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:text="Mini"
            android:textColor="@color/cardview_dark_background"
            android:textSize="28dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/Luxury_btn"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="220dp"
            android:background="#fff"
            android:src="@drawable/luxu">

        </ImageButton>

        <TextView

            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:text="Luxury"
            android:textColor="@color/cardview_dark_background"
            android:textSize="28dp" />

        <ImageButton
            android:id="@+id/Prime_btn"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:src="@drawable/primee">

        </ImageButton>

        <TextView

            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:text="Prime"
            android:textColor="@color/cardview_dark_background"
            android:textSize="28dp">

        </TextView>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Please Select your Car"
        android:textColor="#000000"
        android:textSize="28dp">

    </TextView>


    </LinearLayout>