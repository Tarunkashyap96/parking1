<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bus"
    android:orientation="vertical"
    android:background="@drawable/way"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bungee"
        android:text="Avalible Buses"
        android:textColor="#B5090909"

        android:textSize="30dp">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/Regularbus"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="220dp"
            android:background="#fff"
            android:src="@drawable/bigbus">

        </ImageButton>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:text="Regular BUS"
            android:textColor="@color/cardview_dark_background"
            android:textSize="28dp" />


        <ImageButton
            android:id="@+id/Minibus"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="#fff"
            android:src="@drawable/minbus">

        </ImageButton>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            android:gravity="center"
            android:text="Mini Bus"
            android:textColor="@color/cardview_dark_background"
            android:textSize="28dp" />




    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"

        android:gravity="center"
        android:text="Please Select your bus"

        android:textColor="#000000"
        android:textSize="28dp"></TextView>


</LinearLayout>